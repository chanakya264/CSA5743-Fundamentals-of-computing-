#include<stdio.h>

int main()
{
  int i,n,Sum=0,numbers;
  float Average;

  printf("\nEnter How many Number:");
  scanf("%d",&n);

  printf("\nEnter the elements one by one:");
  for(i=0;i<n;++i)
   {
     scanf("%d",&numbers);
     Sum = Sum +numbers;
   }

  Average = Sum/n;

  printf("\nSum of the %d Numbers = %d",n, Sum);
  printf("\nAverage of the %d Numbers = %.2f",n, Average);

  return 0;
}
